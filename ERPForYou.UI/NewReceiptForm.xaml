<Page x:Class="ERPForYou.UI.NewReceiptForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ERPForYou.UI"
      mc:Ignorable="d" 
      d:DesignHeight="472" d:DesignWidth="718"
      Title="NewReceiptForm" Background="White" ShowsNavigationUI="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Форма для нового поступления" HorizontalAlignment="Left" Margin="30,5,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="243"/>
        <Label x:Name="label1" Content="Тип материала:" HorizontalAlignment="Left" Margin="30,38,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="124" Grid.RowSpan="2"/>
        <Label x:Name="label2" Content="Наименование:" HorizontalAlignment="Left" Margin="30,1,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="16" Height="32" Width="124"/>
        <Label x:Name="label3" Content="Единица измерения:" HorizontalAlignment="Left" Margin="30,2,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="16" Height="32" Width="160"/>
        <Label x:Name="label4" Content="Количество:" HorizontalAlignment="Left" Margin="30,2.5,0,0" Grid.Row="4" VerticalAlignment="Top" FontSize="16" Height="32" Width="99"/>
        <ComboBox x:Name="comboBoxType" HorizontalAlignment="Left" Margin="30,36,0,0" Grid.Row="1" VerticalAlignment="Top" Width="276" Height="22"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" Margin="30,40.5,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="ОК" HorizontalAlignment="Left" Margin="22,21.5,0,0" Grid.Row="6" VerticalAlignment="Top" Width="120" Height="30" FontSize="16"/>
        <Button x:Name="button_Copy" Content="Отмена" HorizontalAlignment="Left" Margin="178,21.5,0,0" Grid.Row="6" VerticalAlignment="Top" Width="120" Height="30" FontSize="16"/>
        <Button x:Name="editType" Content="Внести изменения в список типов" HorizontalAlignment="Left" Margin="359,36,0,0" Grid.Row="1" VerticalAlignment="Top" Width="272" Click="editType_Click" Height="22"/>
        <ComboBox x:Name="comboBoxMaterial" HorizontalAlignment="Left" Margin="30,37,0,0" Grid.Row="2" VerticalAlignment="Top" Width="276" Height="22"/>
        <Button x:Name="editMaterial" Content="Внести изменения в список наименований" HorizontalAlignment="Left" Margin="359,37,0,0" Grid.Row="2" VerticalAlignment="Top" Width="272" Click="editMaterial_Click" Height="22"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="22" Margin="30,40,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label4_Copy" Content="Цена за единицу:" HorizontalAlignment="Left" Margin="30,1.5,0,0" Grid.Row="5" VerticalAlignment="Top" FontSize="16" Height="32" Width="142"/>
        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="22" Margin="30,39.5,0,0" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
